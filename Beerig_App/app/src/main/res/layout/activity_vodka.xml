<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VodkaActivity">

    <ImageView
        android:id="@+id/vodka_screen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/vodka"
        android:src="@drawable/vodka_title"
        android:foregroundGravity="top"
        />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/vodka_screen_title"
        android:layout_margin="10dp">

        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/drinkshape_container"
            android:background="@android:color/transparent"
            android:layout_margin="5dp"/>

        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/drinkshape_container"
            android:background="@android:color/transparent"
            android:layout_margin="5dp"/>

    </TableRow>

</RelativeLayout>