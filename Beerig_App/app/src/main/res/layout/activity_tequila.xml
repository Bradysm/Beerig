<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TequilaActivity">

    <ImageView
        android:id="@+id/tequila_screen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/tequila"
        android:src="@drawable/tequila_title"
        android:foregroundGravity="top"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tequila_screen_title"
        android:stretchColumns="*">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" >

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/drinkshape_container"
                android:background="@android:color/transparent"
                android:layout_margin="5dp"/>

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/drinkshape_container"
                android:background="@android:color/transparent"
                android:layout_margin="5dp"/>

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/drinkshape_container"
                android:background="@android:color/transparent"
                android:layout_margin="5dp"/>

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/drinkshape_container"
                android:background="@android:color/transparent"
                android:layout_margin="5dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/drinkshape_container"
                android:background="@android:color/transparent"
                />

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/drinkshape_container"
                android:background="@android:color/transparent"
                />

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/drinkshape_container"
                android:background="@android:color/transparent"
                />

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/drinkshape_container"
                android:background="@android:color/transparent"
                />
        </TableRow>

    </TableLayout>
</RelativeLayout>