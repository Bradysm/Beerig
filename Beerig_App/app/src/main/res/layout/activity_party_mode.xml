<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/party_time_background"
    tools:context=".PartyModeActivity">

    <ImageView
        android:id="@+id/party_time_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/party_title" />

    <ImageView
        android:id="@+id/party_mode_description"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/party_time_logo"
        android:background="@android:color/transparent"
        android:contentDescription="@string/Start_Partying"
        android:padding="0dp"
        android:src="@drawable/party_description_para"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/go_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="@string/Start_Partying"
        android:focusable="true"
        android:onClick="openPartyDialog"
        android:src="@drawable/party_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="@string/Start_Partying"
        android:focusable="true"
        android:onClick="goBack"
        android:src="@drawable/back_button_party" />
</RelativeLayout>